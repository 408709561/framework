<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.github.wxiaoqi.security.admin.mapper.PositionMapper">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.github.wxiaoqi.security.admin.entity.Position" id="positionMap">
        <result property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="departId" column="depart_id"/>
        <result property="code" column="code"/>
        <result property="type" column="type"/>
        <result property="crtUserName" column="crt_user_name"/>
        <result property="crtUserId" column="crt_user_id"/>
        <result property="crtTime" column="crt_time"/>
        <result property="updUserName" column="upd_user_name"/>
        <result property="updUserId" column="upd_user_id"/>
        <result property="updTime" column="upd_time"/>
        <result property="attr1" column="attr1"/>
        <result property="attr2" column="attr2"/>
        <result property="attr3" column="attr3"/>
        <result property="attr4" column="attr4"/>
    </resultMap>
    <insert id="insertPositionUser">
      insert into base_position_user (id,position_id,user_id) values (#{id},#{positionId},#{userId})
    </insert>
    <delete id="deletePositionUsers">
      delete from base_position_user where position_id = #{positionId}
    </delete>
    <select id="selectPositionUsers" resultType="com.github.wxiaoqi.security.admin.entity.User">
        select u.username,u.name,u.id from base_position_user bpu inner join base_user u
        on bpu.user_id = u.id
        where position_id = #{positionId}
    </select>

</mapper>